extends layout
block head
    link(rel='stylesheet', href='/css/login.css')

block content
    .container.formwrapper
        .row
            form(method="post")
                h2.form-reg-heading               Log in
                input.input-block-level(type='text',placeholder='User Name',name='user')
                input.input-block-level(type='password',placeholder='Password',name='pwd')

                button.btn.btn-primary.btn-block(type='submit')            Log in